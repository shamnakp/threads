            let landmark = document.forms["addressForm"]["ladmark"].value; // corrected from "fullName"
            let townCity = document.forms["addressForm"]["townCity"].value;
            let state = document.forms["addressForm"]["state"].value;
            let addressType = document.forms["addressForm"]["adressType"].value; // corrected from "fullName"


            const nameRegex = /^[a-zA-Z]+(?:[\s-][a-zA-Z]+)*$/;
            const mobileRegex = /^\d{10}$/;
            const pincodeRegex = /^\d{6}$/;
            const addressLineRegex = /^[a-zA-Z0-9\s,'-]*$/;
            const areaStreetRegex = /^[a-zA-Z0-9\s,'-]*$/;
            const landmarkRegex = /^[a-zA-Z0-9\s,'-]*$/;
            const townCityRegex = /^[a-zA-Z\s,'-]*$/;
            const stateRegex = /^[a-zA-Z\s,'-]*$/;
            const addressTypeRegex = /^[a-zA-Z\s,'-]*$/;

            // Reset error messages
            document.querySelectorAll('.error-message').forEach(field => field.textContent = '');

            if (name.trim() === "") {
                document.getElementById("nameError").innerText = "Please enter a name.";
                return false;
            } else if (!name.match(nameRegex)) {
                document.getElementById("nameError").innerText = "Name can only contain letters";
                return false;
            }

            if (!mobile.match(mobileRegex)) {
                document.getElementById("mobileError").innerText = "Please enter a valid mobile number.";
                return false;
            }

            if (!pincode.match(pincodeRegex)) {
                document.getElementById("pincodeError").innerText = "Please enter a valid pincode number.";
                return false;
            }

            if (!addressLine.match(addressLineRegex)) {
                document.getElementById("addressLineError").innerText = "Please enter a valid house number.";
                return false;
            }

            if (!areaStreet.match(areaStreetRegex)) {
                document.getElementById("areaStreetError").innerText = "Please enter a valid Area Street.";
                return false;
            }

            if (!landmark.match(landmarkRegex)) {
                document.getElementById("landmarkError").innerText = "Please enter a valid Landmark.";
                return false;
            }

            if (!townCity.match(townCityRegex)) {
                document.getElementById("townCityError").innerText = "Please enter a valid Town City.";
                return false;
            }

            if (!state.match(stateRegex)) {
                document.getElementById("stateError").innerText = "Please enter a valid state.";
                return false;
            }

            if (!addressType.match(addressTypeRegex)) {
                document.getElementById("addressTypeError").innerText = "Please enter a valid address Type";
                return false;
            }

            return true;
        }
    </script>


