    <script>
        function referal(id) {
            var copyText = `http://localhost:5000/api/register?id=${id}`;


            Swal.fire({

                icon: 'success',
                title: 'Copied SuccessFull',
                showConfirmButton: false,
                timer: 1500
            });



            navigator.clipboard.writeText(copyText)
                .then(function () {
                    console.log("Text copied to clipboard: " + copyText);

                    // If you want to close something with the class 'close-container' here
                    var noThanksButton = document.querySelector('.close-container button');
                    if (noThanksButton) {
                        noThanksButton.click();
                    }
                })
                .catch(function (err) {
                    console.error("Failed to copy text: " + err);
                });
        }

    </script>
    <script>
        $(document).ready(function () {
            // Handle form submission when "Add Money" button is clicked
            $("#addMoneyButton").click(function () {
                var amount = $("#moneyAmount").val(); // Get the entered amount

                if (amount.trim() === "") {
                    alert("Please enter a valid amount.");
                    return;
                }
                $("#addMoneyModal").modal("hide");
                $("#walletBalance").text("₹" + amount);


                $.ajax({
                    url: "/api/addMoneyWallet",
                    method: "POST",
                    data: {
                        amount: amount
                    },
                    success: (response) => {

                        if (response.status) {

                            var razorpayApiKey = 'rzp_test_d4KrolXkkWXwvg';

                            // Calculate the amount dynamically based on the total order amount (in paise)
                            var orderAmount = Math.round(amount * 100);


                            // Define the Razorpay options
                            var options = {
                                "key": razorpayApiKey,
                                "amount": orderAmount, // Dynamically calculated amount
                                "currency": "INR",
                                "name": "THREADS",
                                "description": "Add money to wallet",
                                "order_id": response.razorpayOrder.id, // Replace with actual order ID
                                "handler": function (response) {
                                    console.log(response);

                                    verifyPayment(response);


                                },

                                "prefill": {
                                    "name": "Customer Name", // Set to the customer's name
                                    "email": "customer@example.com", // Set to the customer's email
                                    "contact": "9000090000" // Set to the customer's contact number
                                },
                                "callback_url": "/your-server-callback-url", // Replace with your server's callback URL
                                "theme": {
                                    "color": "#3399cc"
                                }
                            };

                            // Create a new Razorpay instance and open the payment dialog
                            var rzp1 = new Razorpay(options);

                            rzp1.open();









                        }
                        else {
                            Swal.fire({
                                title: 'Error Occured',
                                text: "Can't process order error occured",
                                icon: 'fail',
                                timer: 5000
                            })

                        }
                    }
                })
                function verifyPayment(response) {

                    $.ajax({
                        url: '/api/verifyPayment',
                        method: 'post',
                        data: {
                            razorpay_order_id: response.razorpay_order_id,
                            razorpay_payment_id: response.razorpay_payment_id,
                            razorpay_signature: response.razorpay_signature
                        },
                        success: (response) => {
                            if (response.status) {


                                $.ajax({
                                    url: "/api/updateMongoWallet",
                                    method: "post",
                                    data: {
                                        amount: amount,

                                    },
                                    success: (response) => {
                                        if (response.status) {
                                            Swal.fire({
                                                title: "Added success",
                                                text: "Add Moneney successfully",
                                                icon: "success",
                                                showConfirmButton: false,
                                                timer: 2000,

                                            })
                                            location.reload()
                                        }
                                    }
                                })








                            } else {
                                alert("Payment failed!" + response.errMsg)
                            }
                        }
                    })
                }
            }
            )
        })




        function itemDelete(prpductId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Are you sure you want to remove this Address?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/api/deleteAddress',
                        method: 'post',
                        data: {
                            productId: prpductId
                        },

                        success: (response) => {
                            console.log('Server Response:', response);
                            if (response.status) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Address Deleted Successfully',
                                    showConfirmButton: false,
                                    timer: 2000
                                });
                                setTimeout(() => {
                                    location.reload();
                                }, 2000);
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'you canot remove this address',
                                    showConfirmButton: false,
                                    timer: 2000
                                });
                            }
                        },
                    });
                }
            });
        }



